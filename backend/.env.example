# ============================================
# LLM COUNCIL - Backend Environment Variables
# ============================================

# ----------------
# Local Model Endpoints (llama.cpp servers)
# ----------------
LLAMA_7B_URL=http://localhost:8001
GPTJ_6B_URL=http://localhost:8002
MISTRAL_7B_URL=http://localhost:8003
DEEPSEEK_7B_URL=http://localhost:8004

# Local Model Configuration
LOCAL_MODEL_TIMEOUT=120
LOCAL_MODEL_MAX_TOKENS=2048
LOCAL_MODEL_TEMPERATURE=0.7

# ----------------
# Remote API Keys
# ----------------
# Hugging Face API (for GPT-OSS-20B or similar)
HUGGINGFACE_API_TOKEN=hf_your_token_here
HUGGINGFACE_MODEL=EleutherAI/gpt-neo-20b
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=4096

# ----------------
# Caching Configuration
# ----------------
# Redis (optional - will use disk cache if not available)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Disk Cache Settings
CACHE_DIR=./cache
CACHE_TTL=3600
ENABLE_CACHE=true

# ----------------
# Performance Settings
# ----------------
MAX_WORKERS=4
REQUEST_TIMEOUT=120
MAX_RETRIES=3
RETRY_DELAY=2

# Parallel Execution
ENABLE_PARALLEL_STAGE1=true
ENABLE_PARALLEL_REVIEWERS=true

# ----------------
# Application Settings
# ----------------
APP_NAME=LLM_Council
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# ----------------
# Model-Specific Settings
# ----------------
# Stage 1 Settings
STAGE1_MAX_TOKENS=1024
STAGE1_TEMPERATURE=0.7

# Paraphrase Settings
PARAPHRASE_MAX_TOKENS=512
PARAPHRASE_TEMPERATURE=0.5

# Reviewer Settings
REVIEWER_MAX_TOKENS=1024
REVIEWER_TEMPERATURE=0.3

# Chairman Settings
CHAIRMAN_MAX_TOKENS=2048
CHAIRMAN_TEMPERATURE=0.5

# ----------------
# Feature Flags
# ----------------
ENABLE_STAGE1_LLAMA=true
ENABLE_STAGE1_HF=true
ENABLE_REVIEWER_A=true
ENABLE_REVIEWER_B=true
ENABLE_CHAIRMAN=true

# Fallback Options
FALLBACK_ON_ERROR=true
SKIP_FAILED_MODELS=true

# ----------------
# Monitoring & Analytics
# ----------------
ENABLE_METRICS=true
METRICS_PORT=9090

ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ----------------
# Security
# ----------------
API_KEY_ENABLED=false
API_KEY=your_secure_api_key_here

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# ----------------
# Development Settings
# ----------------
RELOAD_ON_CHANGE=true
PRETTY_PRINT_JSON=true
SAVE_DEBUG_OUTPUTS=false
DEBUG_OUTPUT_DIR=./debug_outputs
